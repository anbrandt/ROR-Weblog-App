<h3>Listing all articles</h3>

<p>You hve written <%= @allarticles.length %> articles
</p>

<table>
  <tr>
    <th>Id </th>
    <th> Title
    </th>
    <th>Description</th>
    <th>
    </th>
    <th>
    </th>
    <th>

    </th>
  </tr>
  <% @allarticles.each do |article| %>
    <tr>
      <td> <%= article.id %></td>
      <td>
        <%= article.title %>
      </td>
      <td> <%= article.description %></td>
      <td>
        <%= link_to 'show', article%>
      </td>
      <td>
        <%= link_to 'edit', edit_article_path(article) %>
      </td>
      <td>
        <%=link_to 'destroy', article, method: :delete, data: {confirm: "Are you sure?"} %>
      </td>

    </tr>
    <% end %>

</table>